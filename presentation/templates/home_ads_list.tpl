{* home_ads_list.tpl *}{load_presentation_object filename="home_ads_list" assign="obj"}{* Start ads list *}<div class="box">  <p class="box-title">View ADS</p>  <ul>  {* Loop through the list of departments *}  {section name=i loop=$obj->mADS}    {assign var=selected value=""}    {* Verify if the department is selected to decide what CSS style       to use *}    {if ($obj->mSelectedADS == $obj->mADS[i].ads_id)}      {assign var=selected value="class=\"selected\""}    {/if}     <li>      {* Generate a link for a new department in the list *}      <a {$selected} href="{$obj->mADS[i].url}" class="box-title">        {$obj->mADS[i].name}      </a>      <p>        {$obj->mADS[i].description}      </p>    </li>  {/section}  </ul></div>{* End departments list *}